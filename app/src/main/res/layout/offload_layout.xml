                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="叫我爸爸就告诉你密码1"
                />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/offload_buttons"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="wifi_offload_not_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:onClick="startOffloadTimer"
            android:id="@+id/offload_reminder" />
        <Button
            android:text="do_not_use_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:onClick="turnOffOffload"
            android:id="@+id/offload_off" />
     </LinearLayout>
</RelativeLayout>
